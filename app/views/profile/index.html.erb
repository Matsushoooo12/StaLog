<div class="posts_index_searchs">
    <div class="search_word">
        <%= search_form_for @search do |f| %>
            <%= f.search_field :name_cont, placeholder: "名前" %>
            <%= f.submit "検索", class: "btn content_btn btn_margin_left"%>
        <% end %>
    </div>
    <div class="search_tag">
        <%= search_form_for @search2 do |f| %>
            <%= f.search_field :goal_cont, placeholder: "目標" %>
            <%= f.submit "検索", class: "btn content_btn btn_margin_left"%>
        <% end %>
    </div>
</div>
<% @users.each do |user| %>
    <%= render 'follows_index', user: user %>
<% end %>