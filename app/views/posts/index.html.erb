<% @posts.each do |post| %>
    <img src="<%= post.user.profile_image%>" class="post_icon_image">
    <%= post.user.name%>
    <%= post.post_content%>
    <%= post.field_content %>
    <%= post.count_hour%>時間
    <%= link_to "/posts/#{post.id}", method: :delete do %>
        <i class="fas fa-trash-alt"></i>
    <% end %>
    <br>
<% end %>