<div class="posts_index_searchs">
    <div class="search_word">
        <%= search_form_for @search do |f| %>
            <%= f.search_field :teaching_materials_cont, placeholder: "内容" %>
            <%= f.submit "検索", class: "btn content_btn btn_margin_left" %>
        <% end %>
    </div>
    <div class="search_tag">
        <%= search_form_for @search2 do |f| %>
            <%= f.search_field :field_content_cont, placeholder: "分野" %>
            <%= f.submit "検索", class: "btn content_btn btn_margin_left"%>
        <% end %>
    </div>
</div>
<div class="posts_index_wrapper">
    <% @posts.each do |post| %>
        <div id="post_<%= post.id %>">
            <%= render 'post', post: post %>
        </div>
    <% end %>
</div>
<%= paginate @posts%>