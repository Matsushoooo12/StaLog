<%= search_form_for @search do |f| %>
    <%= f.search_field :post_content_cont %>
    <%= f.submit "検索", class: "btn btn-primary"%>
<% end %>
<%= search_form_for @search2 do |f| %>
    <%= f.search_field :field_content_cont %>
    <%= f.submit "タグ検索", class: "btn btn-primary"%>
<% end %>
<% @posts.each do |post| %>
    <div id="post_<%= post.id %>">
        <%= render 'post', post: post %>
    </div>
<% end %>
<%= month_calendar events: @posts do |date, posts| %>
    <%= date.day %>
    <% posts.each do |post| %>
        <%= post.field_content %>
        <%= post.count_hour %>
    <% end %>
<% end %>