<div class="posts_show_content_wrapper">
    <div>
        <img src="<%= @post.user.profile_image%>" class="icon_image">
        <h1><%= @post.user.name %></h1>
        <p>目標<br><%= @post.user.goal%></p>
    </div>
    <div>
        <p><%= @post.field_content%>　<%= @post.count_hour %>時間</p>
        <p><%= @post.start_time%></p>
        <p class="content_title">内容</p>
        <p class="content_text content"><%= @post.teaching_materials %></p>
        <p class="content_title">実行</p>
        <p class="content_text"><%= @post.post_content %></p>
        <p class="content_title">改善点</p>
        <p class="content_text"><%= @post.improvement_points %></p>
        <p>
            <%= link_to edit_post_path(@post.id) do %>
                <i class="fas fa-edit"></i>
            <% end %>
        </p>
    </div>
</div>
<%# コメントフォーム %>
<div class="posts_show_comment_wrapper">
    <p>★コメントする</p>
        <%= form_with model:[@post, @comment], method: :post do |f| %>
            <div><%= f.text_area :content, placeholder: "コメントする" %></div>
            <div><%= f.hidden_field :post_id, value: @post.id %></div>
            <div><%= f.submit "送信", class: "btn btn-primary"%></div>
        <% end %>
    <p>★コメント一覧</p>
    <% @comments.each do |comment| %>
        <%= link_to profile_path(comment.user.id) do %>
            <img src="<%= comment.user.profile_image %>" class="post_icon_image">
            <%= comment.user.name %>
        <% end %>
        <%= comment.content %>
        <% if comment.user_id == current_user.id %>
            <%= link_to "/posts/#{@post.id}/comments/#{comment.id}", method: :delete do %>
                <i class="fas fa-trash-alt"></i>
            <% end %>
        <% end %>
    <% end %>
</div>