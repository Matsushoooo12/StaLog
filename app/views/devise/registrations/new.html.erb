<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, placeholder: "名前", class: "form-control", style: "width: 350px;" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control", style: "width: 350px;" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "パスワード", class: "form-control", style: "width: 350px;" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder: "パスワード確認", class: "form-control", style: "width: 350px;" %>
  </div>

  <div class="form-group">
    <%= f.label :profile_image %><br />
    <%= f.file_field :profile_image, class: "form-control", style: "width: 350px;" %>
  </div>

  <div class="form-group">
    <%= f.label :profile_text %><br />
    <%= f.text_area :profile_text, autofocus: true, placeholder: "自己紹介", class: "form-control", size: "10×30", style: "width: 350px;" %>
  </div>

  <%= f.submit "アカウント登録", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>