<div class="posts_new_forms_wrapper">
  <h2>新規登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <table class="form-table">
      <tbody>
        <tr>
          <th>名前</th>
          <td>
              <%= f.text_field :name, autofocus: true, class: "form-control", size: "60"%>
          </td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td>
                <%= f.text_field :email, autofocus: true, class: "form-control", size: "60" %>
            </td>
        </tr>
        <tr>
            <th>パスワード</th>
            <td>
                <%= f.password_field :password, autofocus: true, class: "form-control", size: "60" %>
            </td>
        </tr>
        <tr>
          <th>パスワード確認</th>
          <td>
              <%= f.password_field :password_confirmation, autofocus: true, class: "form-control", size: "60" %>
          </td>
        </tr>
        <tr>
          <th>プロフィール画像</th>
          <td>
              <%= f.file_field :profile_image, autofocus: true, class: "form-control", size: "60" %>
          </td>
        </tr>
        <tr>
          <th>目標</th>
          <td>
              <%= f.text_area :goal, autofocus: true, class: "form-control", size: "60" %>
          </td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td>
              <%= f.text_area :profile_text, autofocus: true, class: "form-control", size: "60" %>
          </td>
        </tr>
      </tbody>
    </table>

    <%= f.submit "更新", class: "btn content_btn btn_margin_top" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>